{{>layout/header}}

<div class="container-fluid">
    <h1>게시글 수정</h1>
    <div class="col-md-12">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="id">글 번호</label>
                    <input type="text" class="form-control" id="posts-id" value="{{post.id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="posts-title" value="{{post.title}}">
                </div>
                <div class="form-group">
                    <label for="author">작성자</label>
                    <input type="text" class="form-control" id="posts-author" value="{{post.author}}" readonly>
                </div>
                <div class="form-group">
                    <label for="content">제목</label>
                    <textarea class="form-control" id="posts-content">{{post.content}}</textarea>
                </div>
            </form>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
            <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        </div>
    </div>
</div>

{{>layout/footer}}

<!-- index.js 추가 -->
<script src="/js/app/index.js"></script>

</body>

</html>